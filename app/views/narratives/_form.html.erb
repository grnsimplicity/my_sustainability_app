<div class="panel-body">
  <%= simple_form_for @narrative do |f| %>
    <%= f.input :title, label: false, input_html: {placeholder: "Title"}%>
    <%= f.input :description, label: false, as: :text, input_html: {placeholder: "Description"} %>
  <%= f.input :result, label: false, as: :text, input_html: {placeholder: "Result"} %>
    <%= f.input :people, label: false, as: :integer, input_html: {placeholder: "People"} %>
  <%= f.input :location, label: false, as: :integer, input_html: {placeholder: "Location"} %>
  <%= f.input :templates, label: false, as: :string, input_html: {placeholder: "Templates"} %>
    <%= f.input :image_url, label: false, input_html: {placeholder: "Image"} %>
    <%= f.submit "Submit".html_safe, class: "btn btn-lg btn-danger"%>
  <% end %>
</div>
