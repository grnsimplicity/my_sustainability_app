<h1> Submit a Topic Suggestion </h1>
<div class="panel-body">
  <%= simple_form_for @issue do |f| %>
    <%= f.input :topic, label: false, input_html: {placeholder: "Name"}%>
    <%= f.input :image_url, label: false, input_html: {placeholder: "Picture"} %>
    <%= f.submit "Submit".html_safe, class: "btn btn-lg btn-danger"%>
  <% end %>
  </div>
</div>
