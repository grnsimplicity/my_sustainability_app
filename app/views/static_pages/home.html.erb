
<section id="portfolio" class="bg-light-gray">
  <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Sustainability Resources</h2>
                <h3 class="section-subheading text-muted">Environmental Topics</h3>
                <background: url("http://www.trackur.com/wp-content/uploads/2013/02/beyoncesuperbowl.jpg")no-repeat bottom center scroll>;
            </div>
        </div>


      <% @issues.each do |issue| %>
      <div class="row">
            <div class="col-md-4 col-sm-6 portfolio-item">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                            <%= image_tag(issue.image_url, :class => "img-responsive") %>
                        </div>
                    </div>
                <div class="portfolio-caption">
                    <h4>  <%= issue.topic %> </h4>
                        <p class="text-muted"> <%=link_to 'Stories', issue_narrative_path %></p>
                </div>
            </div>
          <% end %>

      </div>
      </div>
</section>

<%= link_to 'Add Your Story', new_issue_narrative_path, class: 'btn btn-default btn-xs' %>

